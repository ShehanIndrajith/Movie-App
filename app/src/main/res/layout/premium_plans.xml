<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Premium"
            android:textSize="30dp"
            android:layout_marginLeft="75dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREMIUM PLANS"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:background="@color/gray"
        android:padding="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Plans"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Individual"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/homebtn"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_height="50dp"
                android:src="@drawable/home1"
                android:contentDescription="Home"/>

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="70dp"
                android:layout_height="50dp"
                android:src="@drawable/search"
                android:contentDescription="Search"/>

            <ImageButton
                android:id="@+id/saveitem_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="140dp"
                android:layout_height="50dp"
                android:src="@drawable/bookmark"
                android:contentDescription="Save List"/>

            <ImageButton
                android:id="@+id/msg_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="210dp"
                android:layout_height="50dp"
                android:src="@drawable/chat"
                android:contentDescription="Chat"/>

            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="280dp"
                android:layout_height="50dp"
                android:src="@drawable/crown"
                android:contentDescription="Premium"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>