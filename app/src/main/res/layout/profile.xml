<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <!-- Header Section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:id="@+id/profile_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Profile"
            android:textSize="30sp"
            android:layout_marginLeft="75dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/header_text"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:id="@+id/edit_icon"/>
    </FrameLayout>

    <!-- Profile Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:id="@+id/profile_picture"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Parsons"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:id="@+id/profile_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:id="@+id/edit_profile"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Details Section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray"
            android:padding="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/profile_details">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/user_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/address"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/phone_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/gender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/date_of_birth"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Saved List Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved List"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:id="@+id/saved_list_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:id="@+id/saved_list">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:layout_marginRight="10dp"
            android:id="@+id/saved_item_1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:layout_marginRight="10dp"
            android:id="@+id/saved_item_2"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:layout_marginRight="10dp"
            android:id="@+id/saved_item_3"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:layout_marginRight="10dp"
            android:id="@+id/saved_item_4"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/homebtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/home1"
                android:contentDescription="Home"/>

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginLeft="70dp"
                android:src="@drawable/search"
                android:contentDescription="Search"/>

            <ImageButton
                android:id="@+id/saveitem_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginLeft="140dp"
                android:src="@drawable/bookmark"
                android:contentDescription="Save List"/>

            <ImageButton
                android:id="@+id/msg_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginLeft="210dp"
                android:src="@drawable/chat"
                android:contentDescription="Chat"/>

            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginLeft="280dp"
                android:src="@drawable/crown"
                android:contentDescription="Premium"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
