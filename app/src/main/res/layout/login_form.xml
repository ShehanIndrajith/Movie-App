<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="ABC Movies"
            android:textSize="30dp"
            android:layout_marginLeft="75dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Login"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password?"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/purple_200"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="@color/purple_200"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/homebtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/home1"
                android:contentDescription="Home"/>

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/search"
                android:layout_toRightOf="@id/homebtn"
                android:layout_marginLeft="20dp"
                android:contentDescription="Search"/>

            <ImageButton
                android:id="@+id/saveitem_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/bookmark"
                android:layout_toRightOf="@id/search_button"
                android:layout_marginLeft="20dp"
                android:contentDescription="Save List"/>

            <ImageButton
                android:id="@+id/msg_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/chat"
                android:layout_toRightOf="@id/saveitem_button"
                android:layout_marginLeft="20dp"
                android:contentDescription="Chat"/>

            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/crown"
                android:layout_toRightOf="@id/msg_button"
                android:layout_marginLeft="20dp"
                android:contentDescription="Premium"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
