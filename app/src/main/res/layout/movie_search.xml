<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Header with Profile and App Title -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Movie App"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="75dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:background="@color/white"/>
    </FrameLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:tint="@color/white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:hint="Search Movie Name, Category, Actor or Actress"
            android:background="@null"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Categories Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:columnCount="2"
        android:rowCount="5"
        android:background="@color/black"
        android:layout_gravity="center">

        <!-- Example Category Item -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:background="@color/white"/>


        <!-- Add more category items similarly -->
    </GridLayout>

    <!-- Bottom Navigation -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/homebtn"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_height="50dp"
                android:src="@drawable/home1"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="70dp"
                android:layout_height="50dp"
                android:src="@drawable/search"
                android:contentDescription="Search" />

            <ImageButton
                android:id="@+id/saveitem_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="140dp"
                android:layout_height="50dp"
                android:src="@drawable/bookmark"
                android:contentDescription="Save List" />

            <ImageButton
                android:id="@+id/msg_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="210dp"
                android:layout_height="50dp"
                android:src="@drawable/chat"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_marginLeft="280dp"
                android:layout_height="50dp"
                android:src="@drawable/crown"
                android:contentDescription="Premium" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
